<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/product/getbyvpn" method="GET">
        <service class="CL\Grid\Api\ProductInterface" method="getProductDataByVPN"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/product/update" method="PUT">
        <service class="CL\Grid\Api\ProductInterface" method="updateProductData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
